# ============================================
# Application Configuration
# ============================================
APP_NAME="CBT Application"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=cbt_app
DB_USERNAME=postgres
DB_PASSWORD=secret

# ============================================
# Redis Configuration
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# Cache & Session Configuration
# ============================================
CACHE_STORE=redis
CACHE_PREFIX=cbt_cache

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================
# Queue Configuration
# ============================================
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=reverb

# ============================================
# Filesystem Configuration
# ============================================
FILESYSTEM_DISK=local

# ============================================
# Mail Configuration
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@cbt.local"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Logging Configuration
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# ============================================
# Security Configuration
# ============================================
BCRYPT_ROUNDS=12

# ============================================
# AI Configuration (Gemini)
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Development Tools (Optional)
# ============================================
# pgAdmin Configuration
PGADMIN_EMAIL=admin@cbt.local
PGADMIN_PASSWORD=admin

# ============================================
# FrankenPHP Configuration (Optional)
# ============================================
# Number of worker processes (0 = disabled, good for development)
# For production, set to number of CPU cores
FRANKENPHP_WORKERS=2

# ============================================
# Reverb Configuration
# ============================================
REVERB_APP_ID=cbt-app-id
REVERB_APP_KEY=cbt-app-key
REVERB_APP_SECRET=cbt-app-secret
REVERB_HOST="localhost"
REVERB_PORT=8080
REVERB_SCHEME=http

REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# ============================================
# Vite Configuration
# ============================================
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"
