{
    email admin@miarridlo.sch.id
    order php_server before file_server
}

cbtapp.miarridlo.sch.id {
    root * /app/public
    encode gzip
    
    # Proxy WebSocket Reverb
    @websockets {
        header Connection *Upgrade*
        header Upgrade    websocket
    }
    reverse_proxy @websockets reverb:8080

    # PHP Application
    php_server
}