{$APP_URL:localhost} {
    # Root directory
    root * /app/public

    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Serve static files
    @static file
    @static path *.css *.js *.ico *.png *.jpg *.jpeg *.gif *.svg *.woff *.woff2 *.ttf *.eot *.webp *.webm *.mp4
    
    handle @static {
        header Cache-Control "public, max-age=31536000, immutable"
        file_server
    }

    # Storage files
    handle /storage/* {
        header Cache-Control "public, max-age=604800"
        file_server
    }

    # Laravel application (FrankenPHP)
    php_server

    # Logs
    log {
        output stdout
        format console
        level INFO
    }
}
