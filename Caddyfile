{
    # Main domain configuration
    {$APP_URL:localhost}
    
    # Enable FrankenPHP worker mode for better performance
    {
        frankenphp {
            worker {
                file public/index.php
                num {$FRANKENPHP_WORKERS:2}
            }
        }
    }

    # Root directory
    root * /app/public

    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
        # Remove server header
        -Server
    }

    # Serve static files directly
    @static {
        file
        path *.css *.js *.ico *.png *.jpg *.jpeg *.gif *.svg *.woff *.woff2 *.ttf *.eot *.webp *.webm *.mp4
    }
    handle @static {
        # Cache static assets for 1 year
        header Cache-Control "public, max-age=31536000, immutable"
        file_server
    }

    # Handle storage files (user uploads)
    @storage {
        path /storage/*
    }
    handle @storage {
        # Cache uploaded files for 1 week
        header Cache-Control "public, max-age=604800"
        file_server
    }

    # PHP files
    @php {
        path *.php
    }
    handle @php {
        # Disable caching for PHP files
        header Cache-Control "no-store, no-cache, must-revalidate"
        php_server
    }

    # Laravel front controller
    handle {
        try_files {path} /index.php
        php_server
    }

    # Access log (optional, comment out in production)
    log {
        output stdout
        format console
        level INFO
    }
}
