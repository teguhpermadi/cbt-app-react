{$APP_URL:localhost} {
    root * /app/public
    encode gzip zstd

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Static files
    @static file
    @static path *.css *.js *.ico *.png *.jpg *.jpeg *.gif *.svg *.woff *.woff2 *.ttf *.eot *.webp *.webm *.mp4
    handle @static {
        header Cache-Control "public, max-age=31536000, immutable"
        file_server
    }

    # Storage
    handle /storage/* {
        header Cache-Control "public, max-age=604800"
        file_server
    }

    # Laravel with FrankenPHP
    handle {
        try_files {path} /index.php
        php_server
    }

    log {
        output stdout
        format console
    }
}
